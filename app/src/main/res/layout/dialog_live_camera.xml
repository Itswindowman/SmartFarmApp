<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background_gradient"
        android:padding="4dp">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/header_gradient"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_videocam" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Live Camera Feed"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Camera Feed Container -->
        <FrameLayout
            android:id="@+id/cameraContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/camera_frame_gradient"
            app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintDimensionRatio="H,4:3">

            <!-- Camera Feed -->
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp" />

            <!-- Loading Overlay -->
            <LinearLayout
                android:id="@+id/loadingOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:indeterminateTint="#4CAF50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Connecting to camera..."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Connection Status -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="12dp"
                android:background="#80000000"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Live"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Button Container -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="360dp"
            android:layout_height="69dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Fullscreen Button -->

            <!-- Snapshot Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFullscreen"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:text="Fullscreen"
                android:textColor="#2196F3"
                app:icon="@drawable/ic_fullscreen"
                app:iconPadding="8dp"
                app:iconTint="#2196F3"
                app:strokeColor="#2196F3"
                app:strokeWidth="1dp" />

            <!-- Record Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSnapshot"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:text="Snapshot"
                android:textColor="#FF9800"
                app:icon="@drawable/ic_camera"
                app:iconPadding="8dp"
                app:iconTint="#FF9800"
                app:strokeColor="#FF9800"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecord"
                style="@style/Widget.Material3.Button"
                android:layout_width="46dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#F44336"
                android:text=""
                android:textColor="#FFFFFF"
                app:icon="@drawable/ic_videocam_white"
                app:iconPadding="8dp"
                app:iconTint="#FFFFFF" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
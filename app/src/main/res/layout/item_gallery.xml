<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_gallery.xml  â€“ one cell in the 2-column gallery grid -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivGalleryThumbnail"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            android:contentDescription="Gallery thumbnail"/>

        <!-- Play-icon overlay for video cells only -->
        <ImageView
            android:id="@+id/ivPlayOverlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_media_play"
            android:alpha="0.85"
            android:visibility="gone"
            android:contentDescription="Play video"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tvGalleryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:textSize="11sp"
        android:textColor="@android:color/secondary_text_light"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Date"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#2E7D32">

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="Add or Edit Vegetation"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F6F8F6">

                <!-- Mode Selection -->
                <RadioGroup
                    android:id="@+id/rgModeSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbAddNew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add New"
                        android:checked="true"
                        android:buttonTint="#2E7D32"
                        android:textColor="#1C1B1F" />

                    <RadioButton
                        android:id="@+id/rbSelectExisting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Select Existing"
                        android:buttonTint="#2E7D32"
                        android:textColor="#1C1B1F" />
                </RadioGroup>

                <!-- Vegetation Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFarmName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="#2E7D32"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFarmName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Vegetation Name"
                        android:inputType="textCapWords"
                        android:textColor="#1C1B1F"
                        android:textColorHint="#6B6B6B" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Existing Vegetation Spinner -->
                <Spinner
                    android:id="@+id/spinnerVegetation"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <!-- Temperature -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Temperature Ranges (Â°C)"
                    android:textColor="#4E5D52"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Day Temperature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDayTempMin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Day min"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDayTempMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Day max"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Night Temperature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNightTempMin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Night min"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNightTempMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Night max"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Ground Humidity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Ground Humidity Ranges (%)"
                    android:textColor="#4E5D52"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Day Ground -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDayGroundMin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Day min"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDayGroundMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Day max"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Night Ground -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNightGroundMin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Night min"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNightGroundMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Night max"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Air Humidity -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Air Humidity Ranges (%)"
                    android:textColor="#4E5D52"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Day Air -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDayAirMin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Day min"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDayAirMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Day max"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Night Air -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNightAirMin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Night min"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:boxStrokeColor="#2E7D32"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNightAirMax"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Night max"
                            android:inputType="numberDecimal"
                            android:textColor="#1C1B1F"
                            android:textColorHint="#6B6B6B" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>

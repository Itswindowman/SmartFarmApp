<?xml version="1.0" encoding="utf-8"?>
<!-- 
    ROOT ELEMENT: CardView
    A CardView is a container from Google's Material Design library. It's perfect for dialogs because
    it creates the appearance of a physical card with rounded corners and a shadow effect (elevation).
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <!-- 
        MAIN CONTAINER: LinearLayout
        A LinearLayout is a fundamental layout that arranges its children in a single line,
        either one on top of the other (vertical) or side-by-side (horizontal).
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 
            HEADER SECTION
            This section creates a colored title bar for the dialog.
            Using theme attributes like `?attr/colorPrimary` instead of hardcoded colors
            allows your dialog to automatically support both light and dark themes.
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Farm"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- This LinearLayout wraps the main form fields and adds consistent padding around them. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 
                FORM SECTION: TextInputLayout
                A `TextInputLayout` is the modern way to show input fields.
                It WRAPS a `TextInputEditText` and adds features like a floating hint label and an outlined box.
                Using the `style` attribute makes the extra `app:box...` attributes you had before unnecessary.
            -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFarmName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Farm name"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Location"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 
                SIDE-BY-SIDE INPUTS
                To place two items side-by-side, we use a horizontal LinearLayout with a `weightSum`.
                Think of `weightSum` as dividing the available width into a number of "shares".
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1">

                    <!-- `numberDecimal` allows for fractional values (e.g., 25.5), which is better for sensor data. -->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTempThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Temp Â°C"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHumidityThreshold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Humidity %"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>